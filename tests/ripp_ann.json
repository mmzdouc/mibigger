"ripp": {
    "additionalProperties": false,
    "properties": {
        "cyclic": {
            "title": "is the RiPP cyclic (otherwise linear)",
            "type": "boolean"
        },
        "peptidases": {
            "items": {
                "type": "string"
            },
            "title": "Peptidase(s) involved in precursor cleavage",
            "type": "array"
        },
        "precursor_genes": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "cleavage_recogn_site": {
                        "items": {
                            "type": "string"
