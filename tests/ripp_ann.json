                    },
                    "core_sequence": {
                        "items": {
                            "type": "string"
                        },
                        "title": "RiPP core peptide amino acid sequence(s)",
                        "type": "array"
                    },
                    "crosslinks": {
                        "items": {
                            "additionalProperties": false,
                            "properties": {
                                "crosslink_type": {
                                    "title": "Type of crosslink",
                                    "type": "string"
                                },
                                "first_AA": {
                                    "title": "Position of first amino acid involved",
                                    "type": "integer"
                                },
                                "second_AA": {
                                    "title": "Position of second amino acid involved",
                                    "type": "integer"
                                }
                            },
                            "required": [
                                "crosslink_type"
                            ],
                            "title": "Crosslink",
                            "type": "object"
